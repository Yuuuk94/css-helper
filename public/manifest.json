{
  "manifest_version": 3,

  "short_name": "css recipe",
  "name": "Css Recipe for design and frontend",
  "description": "Css Recipe for design & frontend",
  "version": "1.0.0",

  "options_ui": {
    "page": "options.html"
  },


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at":"document_end",
      "js": ["js/content_script.js", "js/vendor.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [{
      "resources": ["js/*.js", "popup.html"], 
      "matches": ["<all_urls>"]
  }]
}
