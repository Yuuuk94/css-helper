{
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "moduleResolution": "bundler",
    "module": "ES2022",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "src"
  },
  "include": ["src", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
